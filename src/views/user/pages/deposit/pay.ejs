<%- include('../../partials/top') %>
    <div class="padding">
        <div class="row">
            <div class="col-md-5 offset-md-3">
                <div class="box">
                    <!-- <div class="box-header b-b">
                        <h3>Form Wizard</h3>
                    </div> -->
                    <div class="box-body">
                        <form id="form" method="POST" action="/<%=url%>/deposit/verify">
                            <input type="text" name="id" hidden value="<%=id%>">
                            <div id="rootwizard" data-plugin="bootstrapWizard">
                                <div class="tab-content">
                                    <div class="tab-panec active" id="tab2">
                                        <div class="form-group">
                                            <p>Please Send <%=response.amount%> to the address below to start confirmations</p>
                                        </div>
                                        <div class="form-group">
                                            <label>Address</label>
                                            <input type="text"class="form-control" placeholder="$0.00" readonly value="<%=response.address%>">
                                        </div>
                                        <div class="form-group">
                                            <img class="img-fluid mx-auto d-block" src="<%=response.qrcode_url%>" alt="QR Code">
                                        </div>
                                    </div>
                                    <div class="row py-3">
                                        <div class="col-12">
                                            <div class="d-flex justify-content-end">
                                                <button type="submit" id="next" class="btn white button-next">Verified</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
<%- include('../../partials/footer') %>