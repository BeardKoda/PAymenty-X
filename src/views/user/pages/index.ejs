<%- include('../partials/top') %>
<!-- main content -->
<!-- <div> -->
    <div class="content-main" id="content-main">
        <div>
            <div class="p-3 light lt box-shadow-0 d-flex">
                <div class="flex">
                    <h1 class="text-md mb-1 _400">Welcome back, <%= user.username %></h1><small class="text-muted">Last logged
                        in:<%  var current_datetime = user.lastLoggin %>
                        <% var Ldated = current_datetime.getFullYear() + "-" + (current_datetime.getMonth() + 1) + "-" + current_datetime.getDate() + " " + current_datetime.getHours() + ":" + current_datetime.getMinutes() + ":" + current_datetime.getSeconds()%><%=Ldated%></small>
                </div>
            </div>
            <div class="padding">
                <div class="row">
                    <div class="col-10"><h5 class="text-dark">Exchange Rates</h5></div>
                </div>
                <hr/>
                <div class="row">
                    <% Coins.forEach((wallet)=>{%>
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="box p-3">
                            <div class="d-flex"><span class="text-dark text-md"><i class="cc <%=wallet.tag.toUpperCase()%>"></i>   <%=wallet.name%> </span></div>
                            <div class="pt-3 text-center"><span class="text-muted text-small"><small>Exchange Rate</small></span></div>
                            <div class="row">
                                <div class="col">
                                    <div class="pb-3 text-center text-md"><%=wallet.tag.toUpperCase()%> / USD $ <span id="<%=wallet.CSF%>"><%=wallet.amount%></span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%})%>
                </div>
                <br/>
                <div class="row">
                    <div class="col-10"><h5 class="text-dark">Portfolio</h5></div>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-sm-6 col-md-12 col-xl-6">
                        <div class="box p-3">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mt-0">
                                        <h2 class="text-lg text-dark">$<span id="grandtotal"></span></h2>
                                    </div>
                                    <p class="pt-3">Overall balance</p>
                                    <div class="d-flex">
                                        <p><a href="/<%=url%>/deposit" class="btn btn-fw primary mr-2">Deposit</a></p>
                                        <p><a href="/<%=url%>/Withdraw" class="btn btn-fw success">Withdraw</a></p>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <h5 class="text-sm">Portfolio Distribution</h5>
                                    <div class="list-group">
                                        <%tt=0%>
                                        <%wallets.forEach((w)=>{%>
                                            <%tt+=parseInt(w.amount)%>
                                        <div class="row">
                                            <div class="col-3">
                                                <p class="mb-0"><%=w.CSF%> | </p>
                                            </div>
                                            <div class="col-9 d-flex">
                                                <div class="progress my-2 blue mr-2" style="height:3px;width: <%= (parseInt(w.amount)/tt)*100%>%;">
                                                    <span class="progress-bar" role="progressbar" aria-valuenow="<%= (parseInt(w.amount)/tt)*100 ? (parseInt(w.amount)/tt)*100 :0%>" aria-valuemin="0" aria-valuemax="100"></span>
                                                </div>
                                                <span class="gx-ml-2"><%= (parseInt(w.amount)/tt)*100 ? (parseInt(w.amount)/tt)*100 :0%>%</span>
                                            </div>
                                        </div>
                                        <br/>
                                        <%})%>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-sm-6 col-md-12 col-xl-6">
                        <div class="box">
                            <div class="box-body">
                                <canvas id="chart-line-line" data-plugin="chart" height="120"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-10"><h5 class="text-dark">Recent Transactions</h5></div>
                    <div class="col-2"><a href="/<%=url%>/transactions/Withdraw" class="col-6 btn primary mr-2">View All</a></div>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="box pt-3">
                            <div class="row box-header">
                            </div>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Date</th>
                                        <th>Coin</th>
                                        <th>Amount</th>
                                        <th>Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%no=1%>
                                    <% trans.forEach((t) => {%>
                                    <tr>
                                        <%  var current_datetime = t.createdAt %>
                                         <% var dated = current_datetime.getFullYear() + "-" + (current_datetime.getMonth() + 1) + "-" + current_datetime.getDate() + " " + current_datetime.getHours() + ":" + current_datetime.getMinutes() + ":" + current_datetime.getSeconds()%>
                                        <td><%=no++%></td>
                                        <td><%=dated%></td>
                                        <td><%=t.currencyFrom%></td>
                                        <td><%=t.amount%></td>
                                        <td><%=t.type%></td>
                                    </tr>
                                    <%})%>
                                    <% if(trans.length == 0) {%>
                                        <tr>
                                            <td colspan="6" class="text-center">No transactions</td>
                                        </tr>
                                    <%}%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- </div> -->
<!-- end main content -->

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
<script>
    $(document).ready(function() {
        // alert("document ready occurred!"); 
        var total = document.getElementById('grandtotal');
        axios.get(`/<%=url%>/api/dashboard/fetch`).then(async(response)=>{
            let data = response.data
            console.log(data)
            total.innerHTML = parseInt(data.grandTotal).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,');
            var wallets = data.coins
            for(var wal of wallets){
                var value = document.getElementById(wal.tag); 
                cur = wal.tag === 'LTCT' ? "bitcoin" : wal.tag === 'USD' ? 'bitcoin':wal.gid.toLowerCase()
                rate = await axios.get('https://api.coingecko.com/api/v3/coins/'+cur)
                value.innerText = parseInt(rate.data.market_data.current_price.usd).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,');
                console.log(value, cur)
            }
        
        
        }).catch((err)=>{
            console.log(err)
        }) 
        var ctx = document.getElementById('chart-line-line');
            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Pending', 'Cancelled', 'Completed'],
                    datasets: [{
                        label: 'Transactions',
                        data: ['<%=Ptrans%>','<%=Ctrans%>','<%=Dtrans%>',],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {}
            });
    })

</script>

<%- include('../partials/footer') %>
