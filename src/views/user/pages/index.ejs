<%- include('../partials/top') %>
<!-- main content -->
<!-- <div> -->
    <div class="content-main" id="content-main">
        <div>
            <div class="p-3 light lt box-shadow-0 d-flex">
                <div class="flex">
                    <h1 class="text-md mb-1 _400">Welcome back, <%= user.username %></h1><small class="text-muted">Last logged
                        in:<%  var current_datetime = user.lastLoggin %>
                        <% var Ldated = current_datetime.getFullYear() + "-" + (current_datetime.getMonth() + 1) + "-" + current_datetime.getDate() + " " + current_datetime.getHours() + ":" + current_datetime.getMinutes() + ":" + current_datetime.getSeconds()%><%=Ldated%></small>
                </div>
            </div>
            <div class="padding">
                <div class="row">
                    <% wallets.forEach((wallet)=>{%>
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="box p-3">
                            <div class="d-flex"><span class="text-dark text-md"><i class="cc <%=wallet.CSF%>"></i>   <%=wallet.currency%> </span></div>
                            <div class="pt-3 text-center"><span class="text-muted text-small"><small>Current Amount</small></span></div>
                            <div class="pb-3 text-center text-lg"><%=wallet.amount%></div>
                        </div>
                    </div>
                    <%})%>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-sm-6 col-md-12 col-xl-6">
                        <div class="box p-3">
                            <!-- <div class="box-header pl-0">
                                <h3>Your Portfolio Balance</h3>
                            </div> -->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mt-0">
                                        <h2 class="text-lg text-dark">$<%=grandTotal.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,')%></h2>
                                        <!-- <span class="text-success"><i class="fa fa-caret-up"></i> 64%</span> -->
                                    </div>
                                    <p class="pt-3">Overall balance</p>
                                    <div class="d-flex">
                                        <p><a href="/<%=url%>/deposit" class="btn btn-fw primary mr-2">Deposit</a></p>
                                        <p><a href="/<%=url%>/Withdraw" class="btn btn-fw success">Withdraw</a></p>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <h5 class="text-sm">Portfolio Distribution</h5>
                                    <div class="list-group">
                                        <%tt=0%>
                                        <%wallets.forEach((w)=>{%>
                                            <%tt+=parseInt(w.amount)%>
                                        <div class="p-1">
                                            <div class="d-flex">
                                                <p class="mb-0"><%=w.currency%></p>
                                                <p class="mb-0">|<%=w.amount%></p>
                                            </div>
                                            <div class="d-flex">
                                                <div class="progress my-2 blue mr-2" style="height:3px;width: <%= (parseInt(w.amount)/tt)*100%>%">
                                                    <span class="progress-bar" role="progressbar" aria-valuenow="<%= (parseInt(w.amount)/tt)*100%>" aria-valuemin="0" aria-valuemax="100"></span>
                                                </div>
                                                <span class="gx-ml-2"><%= (parseInt(w.amount)/tt)*100%>%</span>
                                            </div>
                                        </div>
                                        <%})%>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-sm-6 col-md-12 col-xl-6">
                        <div class="box">
                            <div class="box-body">
                                <canvas id="chart-line-line" data-plugin="chart" height="120"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="box pt-3">
                            <div class="row box-header">
                                <div class="col-8"><h2 class="text-dark">Recent Deposits Transactions</h2></div>
                                <div class="col-4"><a href="/<%=url%>/transactions/deposit" class="col-6 btn primary mr-2">View All</a></div>
                            </div>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Date</th>
                                        <th>Coin</th>
                                        <th>Amount</th>
                                        <th>Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%no=1%>
                                    <% trans.forEach((t) => {%>
                                    <tr>
                                        <%  var current_datetime = t.createdAt %>
                                         <% var dated = current_datetime.getFullYear() + "-" + (current_datetime.getMonth() + 1) + "-" + current_datetime.getDate() + " " + current_datetime.getHours() + ":" + current_datetime.getMinutes() + ":" + current_datetime.getSeconds()%>
                                        <td><%=no++%></td>
                                        <td><%=dated%></td>
                                        <td><%=t.currencyFrom%></td>
                                        <td><%=t.amount%></td>
                                        <td><%=t.type%></td>
                                    </tr>
                                    <%})%>
                                    <% if(trans.length == 0) {%>
                                        <tr>
                                            <td colspan="6" class="text-center">No transactions</td>
                                        </tr>
                                    <%}%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- </div> -->
<!-- end main content -->

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
<script>
    var ctx = document.getElementById('chart-line-line');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Pending', 'Cancelled', 'Completed'],
                datasets: [{
                    label: 'Transactions',
                    data: ['<%=Ptrans%>','<%=Ctrans%>','<%=Dtrans%>',],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {}
        });

</script>
<%- include('../partials/footer') %>
