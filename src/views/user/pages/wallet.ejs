<%- include('../partials/top') %>
<!-- main content -->
    <div class="content-main" id="content-main">
        <div>
            <div class="padding">
                    <h5>Your Wallets </h5><hr/>
                <div class="row">
                    <% wallets.forEach((wallet)=>{%>
                    <div class="col-6 col-md-4 col-lg-6">
                        <div class="box p-3">
                            <div class="d-flex"><span class="text-dark text-md"><i class="cc <%=wallet.CSF%>"></i>   <%=wallet.currency%> </span></div>
                            <div class="pt-3 text-center"><span class="text-muted text-small"><small>Current Amount</small></span></div>
                            <div class="pb-3 text-center text-lg"><%=wallet.amount%></div>
                            <!-- <div class="d-flex text-success">
                                <span class="flex text-muted">+$1,600.08</span>
                                <span><i class="fa fa-caret-up"></i> 12%</span>
                            </div> -->
                        </div>
                    </div>
                    <%})%>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-md-12 col-xl-6">
                        <div class="box p-3">
                            <!-- <div class="box-header pl-0">
                                <h3>Your Portfolio Balance</h3>
                            </div> -->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mt-0">
                                        <h2 class="text-lg text-dark">$<%=grandTotal.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,')%></h2>
                                        <!-- <span class="text-success"><i class="fa fa-caret-up"></i> 64%</span> -->
                                    </div>
                                    <p class="pt-3">Overall balance</p>
                                    <div class="d-flex">
                                        <p><a href="/<%=url%>/deposit" class="btn btn-fw primary mr-2">Deposit</a></p>
                                        <p><a href="/<%=url%>/Withdraw" class="btn btn-fw success">Withdraw</a></p>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <h5 class="text-sm">Portfolio Distribution</h5>
                                    <div class="list-group">
                                        <%tt=0%>
                                        <%wallets.forEach((w)=>{%>
                                            <%tt+=parseInt(w.amount)%>
                                        <div class="p-1">
                                            <div class="d-flex">
                                                <p class="mb-0"><%=w.currency%></p>
                                                <p class="mb-0">|<%=w.amount%></p>
                                            </div>
                                            <div class="d-flex">
                                                <div class="progress my-2 blue mr-2" style="height:3px;width: <%= (parseInt(w.amount)/tt)*100%>%;">
                                                    <span class="progress-bar" role="progressbar" aria-valuenow="<%= (parseInt(w.amount)/tt)*100 ? (parseInt(w.amount)/tt)*100 :0%>" aria-valuemin="0" aria-valuemax="100"></span>
                                                </div>
                                                <span class="gx-ml-2"><%= (parseInt(w.amount)/tt)*100 ? (parseInt(w.amount)/tt)*100 :0%>%</span>
                                            </div>
                                        </div>
                                        <%})%>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-sm-6">
                        <h5>Transfer Coin</h5><hr/>
                        <div class="box pt-3">
                            <div class="box-body">
                                <p class="text-dark text-md">1 BTC equals</p>
                                <!-- <h2 class="mb-2 text-blue font-weight-normal">11466.78 USD</h2>
                                <p class="text-grey mb-3 mb-lg-4">@ 1 BTC = 6718.72 USD</p> -->

                                <form class="form-inline flex-wrap form-row pt-2" role="form">
                                    <div class="col-auto mb-2">
                                        <label class="mb-1 justify-content-start" for="from">From: </label>
                                        <select class="form-control input-c" id="from" style="width: 128px">
                                            <option>BTC</option>
                                            <option>USD</option>
                                        </select>

                                    </div>
                                    <div class="col-auto mb-2">
                                        <label class="mb-1 justify-content-start" for="to">To: </label>
                                        <select class="form-control input-c" id="to" style="width: 128px">
                                            <option>BTC</option>
                                            <option>USD</option>
                                        </select>

                                    </div>
                                    <div class="col-auto mb-3">
                                        <label class="mb-1 justify-content-start" for="amount">Amount (BTC):
                                        </label>
                                        <input type="email" class="form-control mr-2" id="amount"
                                            placeholder="0.0" style="width:250px">
                                    </div>
                                    <div class="row">
                                        <div class="col-auto">
                                            <button class="btn btn-fw success ml-2">Transfer </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- end main content -->
<%- include('../partials/footer') %>
