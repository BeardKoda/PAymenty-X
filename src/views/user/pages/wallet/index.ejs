<%- include('../../partials/top') %>
<!-- main content -->
    <div class="content-main" id="content-main">
        <div>
            <div class="padding">
                <div class="row">
                    <div class="col-8">
                        <h5>Your Wallets </h5>
                    </div>
                    <div class="col-4">
                        <form method="POST" action="/<%=url%>/wallet/generate">
                            <button type="submit" class="btn btn-md info">Generate Wallet</button>
                        </form>
                    </div>
                </div><hr/>
                <div class="row">
                    <% wallets.forEach((wallet)=>{%>
                    <div class="col-4 col-md-4 col-lg-4">
                        <div class="box p-3">
                            <div class="row text-center">
                                <div class="col-12 text-center">
                                    <span class="text-dark text-md">
                                        <i class="cc <%=wallet.CSF%>"></i><%=wallet.currency%> 
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="pt-3 text-center"><span class="text-muted text-center text-small"><small>Wallet Amount </small></span></div>
                                    <div class="pb-3 text-center text-lg"><%= parseFloat(wallet.amount)%> <%= wallet.CSF.toUpperCase()%></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%})%>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-md-12 col-xl-6">
                        <div class="box p-3">
                            <!-- <div class="box-header pl-0">
                                <h3>Your Portfolio Balance</h3>
                            </div> -->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mt-0">
                                        <h2 class="text-lg text-dark">$<%=grandTotal ? grandTotal.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,'):0 %></h2>
                                        <!-- <span class="text-success"><i class="fa fa-caret-up"></i> 64%</span> -->
                                    </div>
                                    <p class="pt-3">Overall balance</p>
                                    <div class="d-flex">
                                        <p><a href="/<%=url%>/deposit" class="btn btn-fw primary mr-2">Deposit</a></p>
                                        <p><a href="/<%=url%>/Withdraw" class="btn btn-fw success">Withdraw</a></p>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <h5 class="text-sm">Portfolio Distribution</h5>
                                    <div class="list-group">
                                        <%tt=0%>
                                        <%wallets.forEach((w)=>{%>
                                            <%tt+=parseInt(w.amount)%>
                                        <div class="p-1">
                                            <div class="d-flex">
                                                <p class="mb-0"><%=w.CSF%></p>
                                                <p class="mb-0">|<%=w.amount%></p>
                                            </div>
                                            <div class="d-flex">
                                                <div class="progress my-2 blue mr-2" style="height:3px;width: <%= (parseInt(w.amount)/tt)*100%>%;">
                                                    <span class="progress-bar" role="progressbar" aria-valuenow="<%= (parseInt(w.amount)/tt)*100 ? (parseInt(w.amount)/tt)*100 :0%>" aria-valuemin="0" aria-valuemax="100"></span>
                                                </div>
                                                <span class="gx-ml-2"><%= (parseInt(w.amount)/tt)*100 ? (parseInt(w.amount)/tt)*100 :0%>%</span>
                                            </div>
                                        </div>
                                        <%})%>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- end main content -->
<%- include('../../partials/footer') %>