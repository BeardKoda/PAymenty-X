<%- include('../../partials/top') %>
<div class="padding">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="box">
                <div class="box-body">
                    <form id="form" method="POST" action="/<%=url%>/withdraw/processing">
                        <div>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab1">
                                    <div class="form-group">
                                        <label>Amount</label>
                                        <input type="number" id="amount" name="amount" class="form-control"
                                            placeholder="$0.00" required>
                                    </div>
                                    <div class="row m-b">
                                        <div class="col-6">
                                            <label for="currency">Currency</label>
                                            <select class="form-control input-c" name="currency" id="currency">
                                                <option>BTC</option>
                                                <option>USD</option>
                                            </select>
                                        </div>
                                        <div class="col-6">
                                            <label for="wallet">From</label>
                                            <select class="form-control input-c" name="wallet" id="wallet">
                                                <option value="BTC">My Bitcoin wallet (0 BTC)</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="bitcoinAddress">Address</label>
                                        <input class="form-control" type="text" name="address" id="address"
                                            placeholder="Paste, or scan destination">
                                    </div>
                                </div>
                                <div class="row py-3">
                                    <div class="col-12">
                                        <div class="d-flex justify-content-end">
                                            <button type="submit" id="next" class="btn primary button-next">Withdraw</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<%- include('../../partials/footer') %>