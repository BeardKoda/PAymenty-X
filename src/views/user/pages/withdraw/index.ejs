<%- include('../../partials/top') %>
<div class="padding">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="box">
                <div class="box-body">
                    <form id="form" method="POST" action="/<%=url%>/withdraw/processing" onsubmit="event.preventDefault(); validateMyForm();">
                        <div>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab1">
                                    <div class="row m-b">
                                        <div class="col-12">
                                            <label for="wallet">Select Wallet to withdraw From</label>
                                            <select id="currency" class="form-control input-c" name="wallet" id="wallet">
                                                <option>Select wallet</option>
                                                <%for(const wal of wallets){%>
                                                    <option value="<%=wal.CSF%>" data-val="<%=wal.currency%>" data-data="<%=wal.CSF%>"><%=wal.currency%>(<%=wal.amount%> <%=wal.CSF%>)</option>
                                                <%}%>
                                            </select>
                                        </div>
                                    </div><br/>
                                    <div class="row m-b">
                                        <div class="col-6">
                                            <label>Amount in <span id="cyptoT">BTC</span></label>
                                            <input type="number" id="amtCypto" name="amountBTC" step="any" class="form-control" placeholder="$0.00" onInput="UCurrentValue(event)" required>
                                        </div>
                                        <div class="col-6">
                                            <label>Amount in USD</label>
                                            <input type="number" id="amtUSD" name="amountUSD" step="any" class="form-control" placeholder="$0.00" onInput="CCurrentValue(event)" readonly>
                                        </div>
                                    </div><br/>
                                    <div class="form-group">
                                        <label for="bitcoinAddress">Address</label>
                                        <input class="form-control" type="text" name="address" id="address"
                                            placeholder="Paste, or scan destination">
                                    </div>
                                </div><hr />
                                <div class="row py-3">
                                    <div class="col-12">
                                        <div class="d-flex justify-content-end">
                                            <button type="submit" id="next" class="btn primary button-next"
                                            data-toggle="modal" data-target="#modal">Withdraw</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<div id="modal" class="modal fade animate black-overlay" data-backdrop="false">
    <div class="modal-dialog modal-sm">
        <div class="modal-content flip-x">
            <div class="modal-body text-center">
                <p class="py-3 mt-3"><i class="fa fa-exclamation-triangle text-warning fa-3x"></i></p>
                <p>Enter Withdrawal Pin</p>
                <input type="text" name="pin" required>
            </div>
            <div class="modal-footer"><button type="button" class="btn white" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn danger" data-dismiss="modal">Submit</button></div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
        $("#currency").change(function(){
            var selectedCurrency = $(this).children("option:selected");
            var select = selectedCurrency[0].dataset.data
            var title = document.getElementById('cyptoT');
            title.innerText = select
            // console.log(selectedCurrency, title);
        });
        UCurrentValue =async(event)=>{
            value = event.target.value
            wal = $( "#currency option:selected" );
            val = wal[0].dataset.val
            // console.log(val)
            price = await getrate(wal, val)
            var title = document.getElementById('amtUSD');
            title.value = (value*price).toFixed(2)
        }
        CCurrentValue =async(event)=>{
            value = event.target.value
            wal = $( "#currency option:selected" );
            val = wal[0].dataset.val
            price = await getrate(wal,val)
            var title = document.getElementById('amtCypto');
            title.value = (value/price).toFixed(2)
        }
        getrate=async(wal, amt)=>{
            cur = wal.val() === 'LTCT' ? "bitcoin" : wal.val() === 'USD' ? 'bitcoin':amt.toLowerCase()
            rate = await axios.get('https://api.coingecko.com/api/v3/coins/'+cur)
            return rate.data.market_data.current_price.usd
        }

    });
</script>
<%- include('../../partials/footer') %>