<%- include('../../partials/top') %>
<div class="padding">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="box">
                <div class="box-body">
                    <form id="form" method="POST" action="/<%=url%>/withdraw/processing" onsubmit="event.preventDefault(); validateMyForm();">
                        <div>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab1">
                                    <div class="row m-b">
                                        <div class="col-12">
                                            <label for="wallet">Select Wallet to withdraw From</label>
                                            <select class="form-control input-c" name="wallet" id="wallet">
                                                <option>Select wallet</option>
                                                <%for(const wal of wallets){%>
                                                    <option value="<%=wal.CSF%>"><%=wal.currency%> Wallet (<%=wal.amount%> <%=wal.CSF%>)</option>
                                                <%}%>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Enter Amount</label>
                                        <input type="number" id="amount" name="amount" class="form-control"
                                            placeholder="$0.00" step="any" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="bitcoinAddress">Address</label>
                                        <input class="form-control" type="text" name="address" id="address"
                                            placeholder="Paste, or scan destination">
                                    </div>
                                </div>
                                <div class="row py-3">
                                    <div class="col-12">
                                        <div class="d-flex justify-content-end">
                                            <button type="submit" id="next" class="btn primary button-next"
                                            data-toggle="modal" data-target="#modal">Withdraw</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<div id="modal" class="modal fade animate black-overlay" data-backdrop="false">
    <div class="modal-dialog modal-sm">
        <div class="modal-content flip-x">
            <div class="modal-body text-center">
                <p class="py-3 mt-3"><i class="fa fa-exclamation-triangle text-warning fa-3x"></i></p>
                <p>Enter Withdrawal Pin</p>
                <input type="text" name="pin" required>
            </div>
            <div class="modal-footer"><button type="button" class="btn white" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn danger" data-dismiss="modal">Submit</button></div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>