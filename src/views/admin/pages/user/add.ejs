<%- include('../../partials/top') %>
    <div class="padding">
        <div class="row">
            <div class="col-md-5 offset-md-3">
                <div class="box">
                    <div class="box-body">
                        <form id="form" method="POST" action="">
                            <input name="id" value="<%=user._id%>" hidden>
                            <div id="rootwizard" data-plugin="bootstrapWizard">
                                <div class="tab-content">

                                    <div class="tab-pane active" id="tab1">
                                        <div class="row text-center">
                                            <div class="col-12">
                                                <h4 class="text-center">Add Funds</h4>
                                                <hr/>
                                            </div>
                                        </div>
                                        <div class="row m-b">
                                            <div class="col-12">
                                                <label for="wallet">Wallet</label>
                                                <select class="form-control input-c" name="wallet" id="wallet" required>
                                                    <%for(const wal of wallets){%>
                                                        <option value="<%=wal.CSF%>"><%=wal.currency%> (<%=wal.CSF%>)</option>
                                                    <%}%>
                                                </select>
                                            </div>
                                        </div><br/>
                                        <div class="row m-b">
                                            <div class="col-12">
                                                <label>Amount in <span id="cyptoT">BTC</span></label>
                                                <input type="number" id="amtCypto" name="amount" step="any" class="form-control" placeholder="$0.00" onInput="UCurrentValue(event)" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row py-3">
                                        <div class="col">
                                            <div class="d-flex justify-content-center">
                                                <button type="submit" id="next" class="btn primary button-next">Deposit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <script>
        $(document).ready(function(){
            $("#currency").change(function(){
                var selectedCurrency = $(this).children("option:selected").text();
                var title = document.getElementById('cyptoT');
                title.innerText = selectedCurrency
                // console.log(selectedCurrency, title);
            });
            UCurrentValue =async(event)=>{
                value = event.target.value
                wal = $( "#currency option:selected" );
                price = await getrate(wal)
                var title = document.getElementById('amtUSD');
                title.value = (value*price).toFixed(2)
                // console.log(value, price)
            }
            CCurrentValue =async(event)=>{
                value = event.target.value
                wal = $( "#currency option:selected" );
                price = await getrate(wal)
                var title = document.getElementById('amtCypto');
                title.value = (value/price).toFixed(2)
                // console.log(value, price)
            }
            getrate=async(wal)=>{
                cur = wal.val() === 'LTCT' ? "bitcoin" : wal.val() === 'USD' ? 'bitcoin':wal.text().toLowerCase()
                rate = await axios.get('https://api.coingecko.com/api/v3/coins/'+cur)
                return rate.data.market_data.current_price.usd
            }

        });
    </script>
