<%- include('../partials/top') %>
<!-- main content --> 
<div class="padding">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="box">
                <div class="box-divider m-0"></div>
                <div class="box-body">
                    <div class="form">
                        <form id="buyCoin" class="tab-pane fade show active" method="POST" action="/<%=url%>/coin/add">
                            <h3 class="text-center">Settings</h3>
                            <div class="form-row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="buyAmount">Full Name</label>
                                        <input class="form-control input-c" type="text" name="name" value="<%=user.username%>">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="Amount">Email</label>
                                        <input class="form-control input-c" readonly type="text" name="email" value="<%=user.email%>">
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="buyAmount">First Name</label>
                                        <input class="form-control input-c" type="text" name="name" value="<%=user.username%>">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="Amount">Last Name</label>
                                        <input class="form-control input-c" readonly type="text" name="email" value="<%=user.email%>">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="walletAddress">Tel-number</label> 
                                <input class="form-control input-c" type="number" step="any" name="password">
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn success" style="width: 300px;">Save Setting</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end main content -->
<%- include('../partials/footer') %>
