<%- include('../../partials/top') %>
<!-- main content --> 
<div class="padding">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="box">
                <div class="box-divider m-0"></div>
                <div class="box-body">
                    <div class="form">
                        <form id="buyCoin" class="tab-pane fade show active" method="POST" action="/<%=url%>/coin/add">
                            <h3 class="text-center">Add New Coin</h3>
                            <div class="form-group">
                                <label for="buyAmount">Coin Name</label>
                                <select class="form-control input-c" name="name" id="selectCryptocurrency">
                                    <%for(const coin of coins) {%>
                                        <option value="<%=coin.id%>"><%=coin.name%> - (<%=coin.symbol%>)</option>
                                    <%}%>
                                </select>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn success" style="width: 300px;">Add Coin</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end main content -->
<%- include('../../partials/footer') %>
