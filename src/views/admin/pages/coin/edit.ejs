<%- include('../../partials/top') %>
<!-- main content --> 
<div class="padding">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="box">
                <div class="box-divider m-0"></div>
                <div class="box-body">
                    <div class="form">
                        <form id="buyCoin" class="tab-pane fade show active" method="POST" action="/<%=url%>/coin/edit/<%=coin._id%>">
                            <h3 class="text-center">Edit Coin</h3>
                            <div class="form-row">
                                <div class="col-5">
                                    <div class="form-group">
                                        <label for="buyAmount">Coin Name</label>
                                        <input class="form-control input-c" type="text" name="name" readonly value="<%=coin.name%>">
                                    </div>
                                </div>
                                <div class="col-2 p-4 mt-2">
                                    <!-- <span class="pl-3">=</span> -->
                                </div>
                                <div class="col-5">
                                    <div class="form-group">
                                        <label for="Amount">Tag/Currency</label>
                                        <input class="form-control input-c" type="text" readonly name="tag" value="<%=coin.tag%>">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="walletAddress">Exchange Rate Amount</label>
                                <input class="form-control input-c" type="number" step="any" name="amount" value="<%=coin.amount%>">
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn success" style="width: 300px;">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end main content -->
<%- include('../../partials/footer') %>
